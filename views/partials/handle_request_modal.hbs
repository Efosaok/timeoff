<div class="modal fade" id="handle_request_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="exampleModalLabel">Handle Leave Request</h4>
        </div>

        <div class="modal-body">
          {{!-- <form action="/requests/approve/" method="POST"> --}}
          <div class="form-group">
            <label for="leave_type" class="control-label">Leave type:</label>
            <select class="form-control" id="mod_leave_type" name="leave_type">
              {{#each logged_user.company.leave_types }}
              <option value={{this.id}} data-tom="{{this.name}}" data-tom-index={{@index}}>{{this.name}}</option>
              {{/each}}
            </select>
          </div>
  
            <label for="approver_comments" class="control-label">Approval comments:</label>
            <textarea class="form-control" id="approver_comments" name="approver_comments"></textarea>
            <input class="btn btn-success single-click" value="Approve" id="approve_leave_btn">
            <input id="id-holder" type="hidden" value="{{this.id}}" name="request">
          <br>
          <br>
          {{!-- <form action="/requests/reject/" method="POST"> --}}
            <label for="rejection_reason" class="control-label">Rejection reason:</label>
            <textarea class="form-control" id="rejecter_reason" name="rejection_reason"></textarea>
            <input class="btn btn-warning single-click" value="Reject" id="reject_leave_btn">
            <input type="hidden" value="{{this.id}}" name="request">
          {{!-- </form> --}}
          <br>
        </div>
      </div>
    </div>
  </div>
</div>
